#include <stdio.h> 
#include <string.h> 
#include <stdlib.h> 

void ft_strclr(char *s)
{
	int i; 
	i = 0; 
	while (s[i] != '\0') 
	{
		s[i] = '\0'; 
		i++;
	}
}

int main(void)
{
	char *string1; 
	string1 = "annie";
	printf("ft_strclr('hello'): %s\n", ft_strclr("hello"));

	printf("ft_strclr(string1): %s\n", ft_strclr(string1));
}
