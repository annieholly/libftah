#include <unistd.h>
#include <stdlib.h>
#include <stdio.h>

char *ft_strnew(size_t size)
{
	int i; 
	char *str; 

	i = 0; 
	str = (char*)malloc((size + 1) * sizeof(char*));
	while(size > 0)
	{
		str[i] = '\0'; 
		i++;
		size--;
	}
	return str; 
}

int main() 
{
	char *str1; 
	str1 = ft_strnew(5); 
	printf("ft_strnew: %s", str1); 
}
