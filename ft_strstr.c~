#include <stdio.h>
#include <string.h> 
#include <stdlib.h> 

int ft_strlen(char *str)
{
	int counter;
	counter = 0;
	while (str[counter] != '\0')
		counter++;
	return counter;
}

char *ft_strstr(char *full_str, char *sub_str)
